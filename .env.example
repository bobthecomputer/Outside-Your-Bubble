# Web application
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace-with-random-string
LOG_LEVEL=info

# Database (PostgreSQL)
DATABASE_URL=postgresql://oyb:oyb@localhost:5432/oyb
DIRECT_URL=postgresql://oyb:oyb@localhost:5432/oyb

# Authentication providers
GITHUB_ID=github-oauth-client-id
GITHUB_SECRET=github-oauth-client-secret

# Email (magic links / notifications)
EMAIL_FROM=news@outsideyourbubble.ai
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
RESEND_API_KEY=

# Verification search
SERPER_API_KEY=

# LLM / summarization
OLLAMA_BASE_URL=http://localhost:11434
# Comma-separated model list, optional
OLLAMA_MODELS=mistral,phi3

# Ingestion and translation
INGEST_USER_AGENT=OutsideYourBubbleBot/0.1 (+https://outsideyourbubble.example)
INGEST_TRANSLATE=false
INGEST_TRANSLATE_MAX_TOTAL=20000
INGEST_TRANSLATE_CHUNK=3500

# Python bridge
OYB_PYTHON_BIN=python3
OYB_PYTHON_CLI=-m

# Peer mesh (optional, experimental)
MESH_SECRET=
MESH_STORAGE_PATH=
MESH_PEERS=

# Feature flags
NEXT_PUBLIC_BETA_SHARE_ENABLED=false
BETA_SHARE_ENABLED=false
