generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ItemTier {
  T0
  T1
  T1b
  T2
  T3
}

enum VerificationStatus {
  DEVELOPING
  TENTATIVE
  CONTESTED
  CONFIRMED
}

enum FeedbackSignal {
  LIKE
  SAVE
  COMPLETE
  MORE
  LESS
}

enum ArtifactKind {
  FLASHCARDS
  MINDMAP
  DOSSIER
  READINGPATH
}

enum TaskType {
  MATH_EXERCISE
  TECH_SNIPPET
  POLICY_PROMPT
  LEARNING_PRACTICE
}

model User {
  id            String       @id @default(cuid())
  name          String?
  email         String?      @unique
  emailVerified DateTime?
  image         String?
  roles         String[]
  nationality   String?
  prefs         Json?
  credits       Int          @default(0)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  accounts      Account[]
  sessions      Session[]
  feedback      Feedback[]
  rankingLogs   RankingLog[]
  preferences   UserPrefs?
  achievements  Achievement[]
  learningPaths LearningPath[]
  events        Event[]
  sharedStories SharedStory[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?
  oauth_token_secret String?
  oauth_token        String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now())

  @@unique([identifier, token])
}

model Source {
  id        String   @id @default(cuid())
  url       String   @unique
  type      String
  title     String?
  active    Boolean  @default(true)
  countryCode String?
  primaryLanguage String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  items     Item[]
}

model Item {
  id            String        @id @default(cuid())
  url           String        @unique
  title         String?
  sourceId      String
  author        String?
  publishedAt   DateTime?
  topicId       String?
  lang          String?      @map("language")
  tags          String[]     @default([])
  text          String?      @db.Text
  originalText  String?      @db.Text
  summaryText   String?      @db.Text
  excerpt       String?      @db.Text
  hash          String?      @unique
  provenance    Json?
  tier          ItemTier
  status        VerificationStatus @default(DEVELOPING)
  noveltyScore  Float?
  noveltyAngles String[] @default([])
  translationProvider String?
  contextSummary String?      @db.Text
  contextBullets String[]     @default([])
  studyPrompts   String[]     @default([])
  contextMetadata Json?
  channels       String[]     @default([])
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  summary      Summary?
  verification  Verification?
  lenses        Lens[]
  tasks         Task[]
  artifacts     CreateArtifact[]
  feedback      Feedback[]
  deckCards     DeckCard[]
  sharedStories SharedStory[]

  source Source @relation(fields: [sourceId], references: [id], onDelete: Cascade)
  topic  Topic? @relation(fields: [topicId], references: [id], onDelete: SetNull)
}

model Summary {
  id            String   @id @default(cuid())
  itemId        String   @unique
  headline      String
  bullets       String[] @default([])
  claims        Json
  citations     Json
  readingTime   Int
  confidence    Float
  unknowns      Json
  microTaskId   String?
  reflectionPrompt String?   @db.Text
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  item Item @relation(fields: [itemId], references: [id], onDelete: Cascade)
}

model Verification {
  id                  String              @id @default(cuid())
  itemId              String              @unique
  claims              Json
  evidence            Json
  corroborationScore  Float
  contradictions      Json
  status              VerificationStatus
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt

  item Item @relation(fields: [itemId], references: [id], onDelete: Cascade)
}

model Lens {
  id         String   @id @default(cuid())
  itemId     String
  lensType   String
  payload    Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  item Item @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@unique([itemId, lensType])
}

model Task {
  id         String    @id @default(cuid())
  itemId     String
  type       TaskType
  prompt     String    @db.Text
  solution   String?   @db.Text
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  item Item @relation(fields: [itemId], references: [id], onDelete: Cascade)
}

model CreateArtifact {
  id        String       @id @default(cuid())
  itemId    String
  kind      ArtifactKind
  title     String
  data      Json
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  item Item @relation(fields: [itemId], references: [id], onDelete: Cascade)
}

model Feedback {
  id        String          @id @default(cuid())
  userId    String
  itemId    String
  signal    FeedbackSignal
  value     Float?
  note      String?         @db.Text
  createdAt DateTime        @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  item Item @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@index([userId, itemId])
}

model RankingLog {
  id           String    @id @default(cuid())
  userId       String?
  slateId      String
  itemIds      String[]  @default([])
  propensities Float[]   @default([])
  ts           DateTime  @default(now())
  metadata     Json?

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
}

model Policy {
  id         String   @id @default(cuid())
  name       String
  params     Json
  createdAt  DateTime @default(now())
  createdBy  String?
}

model Topic {
  id        String   @id @default(cuid())
  slug      String   @unique
  label     String
  group     String   @default("general")
  subcategory String?
  tags      String[] @default([])
  professional Boolean @default(false)
  randomEligible Boolean @default(true)
  defaultMode String   @default("quen-3.4b")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  items     Item[]
  deckCards DeckCard[]
  learningPaths LearningPath[]
}

model DeckCard {
  id        String   @id @default(cuid())
  itemId    String
  topicId   String?
  reason    String
  rank      Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  item  Item  @relation(fields: [itemId], references: [id], onDelete: Cascade)
  topic Topic? @relation(fields: [topicId], references: [id], onDelete: SetNull)
}

model LearningPath {
  id        String   @id @default(cuid())
  userId    String
  topicId   String?
  status    String   @default("active")
  required  Int      @default(5)
  progress  Int      @default(0)
  steps     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  topic Topic? @relation(fields: [topicId], references: [id], onDelete: SetNull)

  @@index([userId, status])
}

model Event {
  id        String   @id @default(cuid())
  userId    String?
  name      String
  ts        DateTime @default(now())
  payload   Json
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId, ts])
}

model UserPrefs {
  userId     String   @id
  locale     String?
  quietHours Json?
  topicsLiked Json?
  topicsMuted Json?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Achievement {
  id        String   @id @default(cuid())
  userId    String
  code      String
  earnedAt  DateTime @default(now())
  metadata  Json?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, code])
}

model SharedStory {
  id         String   @id @default(cuid())
  userId     String?
  itemId     String?
  sourceUrl  String?
  title      String
  summary    String?  @db.Text
  status     String   @default("pending")
  audience   String   @default("beta")
  partnerTargets String[] @default([])
  tags       String[] @default([])
  noveltyAngle String?
  contextSummary String? @db.Text
  studyPrompts   String[] @default([])
  channels       String[] @default([])
  originalLanguage String?
  translationProvider String?
  metadata    Json?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
  item Item? @relation(fields: [itemId], references: [id], onDelete: SetNull)

  @@index([status, createdAt])
}

